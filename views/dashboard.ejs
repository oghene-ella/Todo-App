<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="icon" type="image/png" href="../public/images/logo.png">
  <link rel="stylesheet" href="../public/styles/app.css">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&display=swap" rel="stylesheet">
  
  <title>Todo App ü•∂</title>
</head>
<body class="body_wrapper">
  <section class="main_wrapper">
    <section class="img"></section>

    <section class="main_body">

      <!-- name and logout button -->
      <span class="profile">
        <h1>Hello <%= user.username%></h1>
        <a href="/logout">Logout</a>
      </span>

      <!-- header -->
      <span class="header">
        <h1>TODO</h1>
        <img src="../public/images/icon-sun.svg" />
      </span>

      <!-- create todo -->
      <form class="create_todo" action="/dashboard/add" method="POST">
        <input type="checkbox" class="checkbox" name="create_todo">

        <input type="text" placeholder="Create a new todo..." class="input_create" name="title"/>

        <button class="AddTodo">Add</button>
      </form>

      <main class="existing_todo">
        <!-- created todo list-->
        <% todos.forEach(function(todo, i) { %>
          <span class="created_todo">
          <!-- <input type="checkbox" id="status_checkbox" class="checkbox" name="create_todo" data-id="<%= todo._id %>"> -->

          <form action="/dashboard/completed/<%=todo._id%>" method="POST">
            <% if (todo.status !=='completed' ) { %>
              <button style="background-color: green; color: white; border: none ; padding-inline: 12px; padding-block: 3px; border-radius: 4px; cursor: pointer;">Update</button>
              <% } %>
          </form>

        
          <p class="input_create" style="text-transform: capitalize;" ><%= todo.title%></p>

          <form class="edit_del" style="display: flex; gap: 20px; align-items: center;" action="/dashboard/del/<%=todo._id%>" method="POST">
            <p><%=todo.status%></p>
            <button class="del">Del </button>
          </form>
        </span>
        <% }); %>
        
        <!-- footer navbar -->
        <span class="nav">
          <p><%= todos.length %> todo left</p>
          <nav>
            <a href="/dashboard">All</a>
            <a href="/dashboard/pending">Pending</a>
            <a href="/dashboard/completed">Completed</a>
          </nav>
        </span>
      </main>

      <p>Drag and drop to reorder list
        <br />
        Coded by Ellahhh!‚ù§Ô∏è
      </p>
    </section>
  </section>

</body>
</html>